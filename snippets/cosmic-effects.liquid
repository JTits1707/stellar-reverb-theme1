{% comment %}
  Stellar Reverb - Cosmic Effects Snippet
  Reusable cosmic background effects
{% endcomment %}

{% if settings.enable_cosmic_particles or settings.enable_star_field %}
  <div class="cosmic-effects" data-particle-count="{{ settings.particle_count | default: 20 }}">
    {% comment %} Star field will be generated by JavaScript {% endcomment %}
    {% comment %} Cosmic particles will be generated by JavaScript {% endcomment %}
  </div>
{% endif %}

{% comment %} Cosmic cursor effects {% endcomment %}
<div class="cosmic-cursor-effects" style="display: none;">
  {% comment %} Cursor particle effects will be generated by JavaScript {% endcomment %}
</div>

{% comment %} Add cosmic effects initialization script {% endcomment %}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    if (window.stellarReverbTheme) {
      window.stellarReverbTheme.initializeCosmicEffects();
    }
  });
</script>

